<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <Properties>
        <Property name="CONSOLE_PATTERN">%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=blue} %style{${sys:PID}}{magenta} [%15.15t] %style{%-40.40C{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</Property>
        <Property name="ROLLING_DATE_PATTERN">%d{dd-MM-yyyy}-%i</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="CONSOLE_APPENDER" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${CONSOLE_PATTERN}"/>
        </Console>

        <!--Console Rolling Files Appender -->
        <RollingFile name="FILE_APPENDER" fileName="../log/redis.log"
                     filePattern="log/console/redis-${ROLLING_DATE_PATTERN}.log.zip" append="true">
            <PatternLayout pattern="${CONSOLE_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
        </RollingFile>

        <!--Error Rolling Files Appender -->
        <RollingFile name="ERROR_FILE_APPENDER" fileName="log/error/redis-error.log"
                     filePattern="log/error/redis-error-${ROLLING_DATE_PATTERN}.log.zip" append="true">
            <PatternLayout pattern="${CONSOLE_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="CONSOLE_APPENDER" level="WARN"/>
            <AppenderRef ref="FILE_APPENDER" level="WARN"/>
            <AppenderRef ref="ERROR_FILE_APPENDER" level="ERROR"/>
        </Root>
    </Loggers>

</Configuration>